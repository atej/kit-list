{
  "compilerOptions": {
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "incremental": true,
    "isolatedModules": true,
    "lib": ["ES2021"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src"]
}
